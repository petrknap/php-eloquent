{
  "autoload": {
    "psr-4": {
      "PetrKnap\\Eloquent\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "PetrKnap\\Eloquent\\": "tests"
    }
  },
  "config": {
    "allow-plugins": false,
    "sort-packages": true
  },
  "description": "A collection of enhancements and helper classes for Eloquent",
  "funding": [
    {
      "type": "other",
      "url": "https://petrknap.github.io/donate.html"
    }
  ],
  "homepage": "https://github.com/petrknap/php-eloquent",
  "keywords": [
    "Eloquent",
    "Laravel",
    "ORM",
    "SQL",
    "helper",
    "persistence"
  ],
  "license": "LGPL-3.0-or-later",
  "name": "petrknap/eloquent",
  "require": {
    "php": ">=8.2",
    "illuminate/contracts": "^11.0|^12.0",
    "illuminate/database": "^11.0|^12.0",
    "illuminate/support": "^11.0|^12.0",
    "petrknap/zoned-datetime-persistence": "^0.3.2"
  },
  "require-dev": {
    "nunomaduro/phpinsights": "^2.11",
    "petrknap/shorts": "^3.2",
    "phpstan/phpstan": "^1.12",
    "phpunit/phpunit": "^10.5",
    "squizlabs/php_codesniffer": "^3.7"
  },
  "scripts": {
    "test": "@test-implementation",
    "check-implementation": [
      "phpcs --colors --standard=PSR12 --exclude=Generic.Files.LineLength src tests",
      "phpstan analyse --level max src --ansi --no-interaction",
      "phpstan analyse --level 5 tests --ansi --no-interaction",
      "phpinsights analyse src tests --ansi --no-interaction --format=github-action | sed -e \"s#::error file=$PWD/#::notice file=#g\""
    ],
    "check-requirements": [
      "composer update \"petrknap/*\"",
      "composer outdated \"petrknap/*\" --major-only --strict --ansi --no-interaction"
    ],
    "test-implementation": [
      "phpunit --colors=always --testdox tests"
    ],
    "ci-script": [
      "@check-implementation",
      "@check-requirements",
      "@test-implementation"
    ]
  }
}
